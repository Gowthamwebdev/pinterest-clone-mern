generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id          Int       @id @default(autoincrement())
  name        String    @unique @db.VarChar(100)
  first_name  String?   @db.VarChar(50)
  last_name   String?   @db.VarChar(50)
  email       String    @unique @db.VarChar(255)
  password    String
  profile_img String?   @db.VarChar(512)
  dob         DateTime? @db.Date
  bio         String?
  created_at  DateTime  @default(now())
  updated_at  DateTime?
  deleted_at  DateTime?
  language    String?   @default("en")
  region      String    @default("global")

  created_pins pin[]       @relation("createdPins")
  created_tags tag[]       @relation("UserCreatedTags")
  saved_pins   saved_pin[] @relation("SavedPins")
  user_tags    user_tags[]

  @@map("users")
}

model pin {
  id          Int       @id @default(autoincrement())
  title       String    @db.VarChar(200)
  description String?   @db.Text
  image_url   String    @db.VarChar(512)
  tags        tag[]     @relation("PinTags")
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  deleted_at  DateTime? //is_deleted

  user_id Int
  user    user @relation("createdPins", fields: [user_id], references: [id])

  saved_by saved_pin[] @relation("pinSavedByUsers")
  pin_tags pin_tags[]

  @@index([user_id])
  @@index([created_at])
  @@map("pins")
}

model tag {
  id         Int       @id @default(autoincrement())
  name       String    @unique @db.VarChar(100)
  slug       String    @unique @db.VarChar(100)
  created_at DateTime  @default(now())
  updated_at DateTime? @updatedAt

  pins          pin[]       @relation("PinTags")
  created_by    user        @relation("UserCreatedTags", fields: [created_by_id], references: [id])
  created_by_id Int
  user_tags     user_tags[]
  pin_tags      pin_tags[]

  @@index([name])
  @@index([slug])
  @@map("tags")
}

model saved_pin {
  user_id    Int
  pin_id     Int
  created_at DateTime @default(now())

  user user @relation("SavedPins", fields: [user_id], references: [id])

  pin pin @relation("pinSavedByUsers", fields: [pin_id], references: [id])

  @@id([user_id, pin_id])
  @@index([created_at])
  @@map("saved_pins")
}

model user_tags {
  user_id Int
  tag_id  Int

  user user @relation(fields: [user_id], references: [id])
  tag  tag  @relation(fields: [tag_id], references: [id])

  @@id([user_id, tag_id])
  @@map("user_tags")
}

model pin_tags {
  pin_id Int
  tag_id Int

  pin pin @relation(fields: [pin_id], references: [id])
  tag tag @relation(fields: [tag_id], references: [id])

  @@id([pin_id, tag_id])
  @@map("pin_tags")
}
